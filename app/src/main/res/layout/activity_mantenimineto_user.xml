<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mantUser.manteniminetoUser"
    android:background="@color/colorBackGroundBlackActiviti"
    >
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        ></include>
    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_centerVertical="true"
        >
        <RelativeLayout
            android:id="@+id/reltiveCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/colorBackGroundBlackActiviti"
            >
            <LinearLayout
                android:id="@+id/linearNombreManteni"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/LinealIndicadores"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Nombre : "
                    android:textColor="#000"
                    android:gravity="center"
                    ></TextView>

                <EditText
                    android:id="@+id/ETNombreUser"
                    style="@style/Input"
                    android:layout_width="200dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/linearNombreManteni"
                android:id="@+id/linearApellidosManteni"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/LinealIndicadores"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Apellidos : "
                    android:textColor="#000"
                    android:gravity="center"
                    ></TextView>

                <EditText
                    android:id="@+id/ETApellidoUser"
                    style="@style/Input"
                    android:layout_width="200dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/linearApellidosManteni"
                android:id="@+id/linearDNIManteni"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/LinealIndicadores"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="DNI : "
                    android:textColor="#000"
                    android:gravity="center"
                    ></TextView>

                <EditText
                    android:id="@+id/ETdni"
                    style="@style/Input"
                    android:layout_width="200dp"
                    android:inputType="number"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/linearDNIManteni"
                android:id="@+id/lineartipoDocManteni"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/LinealIndicadores"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Tipo Doc. : "
                    android:textColor="#000"
                    android:gravity="center"
                    ></TextView>

                <Spinner
                    android:id="@+id/SpinerTipoDoc"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"></Spinner>
            </LinearLayout>


            <LinearLayout
                android:layout_below="@+id/lineartipoDocManteni"
                android:id="@+id/linearCorreoManteni"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/LinealIndicadores"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Correo : "
                    android:textColor="#000"
                    android:gravity="center"
                    ></TextView>

                <EditText
                    android:id="@+id/ETCorreo"
                    android:layout_width="200dp"
                    style="@style/Input"
                    android:inputType="textEmailAddress"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/linearCorreoManteni"
                android:id="@+id/linearTelefonoManteni"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/LinealIndicadores"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Telefono : "
                    android:textColor="#000"
                    android:gravity="center"
                    ></TextView>

                <EditText
                    android:id="@+id/ETTelefono"
                    android:layout_width="200dp"
                    style="@style/Input"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/linearTelefonoManteni"
                android:id="@+id/linearTipoSexoManteni"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                style="@style/LinealIndicadores"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Tipo sexo : "
                    android:textColor="#000"
                    android:gravity="center"
                    ></TextView>

                <Spinner
                    android:id="@+id/SpinerTipoSexo"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"></Spinner>
            </LinearLayout>

            <Button
                android:layout_marginTop="5dp"
                android:layout_below="@+id/linearTipoSexoManteni"
                android:id="@+id/btnActualizaDatos"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:text="Enviar"
                android:textColor="@color/colorTextForButton"
                android:layout_alignParentLeft="true"
                />
            <Button
                android:layout_marginTop="5dp"
                android:layout_below="@+id/linearTipoSexoManteni"
                android:id="@+id/BtnCancelaAcrualizacion"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@color/colorAccent"
                android:text="Cancelar"
                android:textColor="@color/colorTextForButton"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/btnOpenDialogActualizaContra"
            android:layout_below="@+id/reltiveCont"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Actualizar ContraseÃ±a"
            android:background="#2c7873"
            android:textColor="#FFF"
            android:elevation="2dp"
            >

        </Button>
    <ProgressBar
        android:id="@+id/ProgressMantuser"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#66685e"
        />
    </RelativeLayout>
</RelativeLayout>